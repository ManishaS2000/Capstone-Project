@model recyclecollection.Models.landfill
@{
    ViewData["Title"] = "Create Landfill Entry";
}

@section Styles {
    <link rel="stylesheet" href="~/css/landfill.css" asp-append-version="true" />
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Landfill Entry</title>
    <link rel="stylesheet" href="styles.css"> <!-- Link to external CSS file -->
</head>
<body>

    <form asp-controller="Landfill" asp-action="Create" method="post" class="form-horizontal">
        <h2>Create Landfill Entry</h2>

        <!-- Landfill Date -->
        <div class="form-group">
            <label>Landfill Date</label>
            <input asp-for="Date" class="form-control" type="date" required />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <!-- Weight -->
        <div class="form-group">
            <label>Weight (lbs)</label>
            <input asp-for="weight" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="weight" class="text-danger"></span>
        </div>

        <!-- Expense -->
        <div class="form-group">
            <label>Expense (USD)</label>
            <input asp-for="Expense" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="Expense" class="text-danger"></span>
        </div>

        <!-- Company Name -->
        <div class="form-group">
            <label>Company Name</label>
            <input asp-for="COMPANYNAME" class="form-control" type="text" required />
            <span asp-validation-for="COMPANYNAME" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit">Submit</button>
        </div>

        <!-- Success Message -->
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success">
                @TempData["msg"]
            </div>
        }
    </form>

</body>
</html>
