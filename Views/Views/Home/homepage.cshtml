@section Styles {
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: url('path-to-your-image.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #333;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 2rem;
            background-color: #2e7d32;
            color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .header .logo-text {
                font-size: 1.8rem;
                font-weight: bold;
            }

        .menu-links {
            display: flex;
            align-items: center;
            gap: 20px;
            list-style: none;
            margin: 0;
            padding: 0;
        }

            .menu-links li {
                position: relative;
            }

            .menu-links a {
                text-decoration: none;
                color: white;
                font-weight: bold;
                padding: 0.5rem 1rem;
                background-color: #4a7d36;
                border-radius: 5px;
                transition: all 0.3s ease-in-out;
            }

                .menu-links a:hover {
                    background-color: grey;
                    transform: translateY(-2px);
                }

        /* Dropdown menu styling */
        .dropdown {
            position: relative;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: white;
            border-radius: 5px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            min-width: 200px;
            z-index: 10;
        }

            .dropdown-menu a {
                display: block;
                padding: 10px 15px;
                color: #333;
                text-decoration: none;
                font-weight: normal;
                transition: background-color 0.3s ease;
            }

                .dropdown-menu a:hover {
                    background-color: #f2f2f2;
                }

        /* Show dropdown on hover */
        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .menu-bar {
            text-align: center;
            margin-top: 50px;
        }

        .image-container {
            display: inline-flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            margin: 20px;
        }

        .clickable-image {
            width: 150px;
            height: 150px;
            cursor: pointer;
            border-radius: 5px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s;
            background-color: transparent;
        }

            .clickable-image:hover {
                transform: scale(1.05);
            }

        .nav-button {
            margin-top: 10px;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            color: white;
            background-color: #2e7d32;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

            .nav-button:hover {
                background-color: grey;
            }

        footer {
            height:30px;
            background-color: #2e7d32; /* Green background */
            color: white; /* White text for contrast */
            padding: 30px 20px;
            text-align: center;
            position: absolute;
            bottom: 0;
            width:100%;
        }

            /* Footer heading styling */
          

            /* Footer paragraph styling */
            
            /* Footer quote styling */
            footer blockquote {
                font-size: 18px;
                font-style: italic;
                margin-bottom: 15px;
            }
    </style>
</head>
<body>
    <header class="header">
        <div class="logo-text">Admin Home Page</div>
        <ul class="menu-links">
            <li class="dropdown">
                <a href="#" class="nav-button">Reports</a>
                <div class="dropdown-menu">
                    <a href="@Url.Action("PieChart", "Reporting")">Pie Chart</a>
                    <a href="@Url.Action("ReportGraphs", "Reporting")">Graphs</a>
                    <a href="@Url.Action("AnnualSummary", "Reporting")"> Annual Summary</a>
                </div>
            </li>
            <li>
                <a href="@Url.Action("logout", "home")" class="nav-button">Log Out</a>
            </li>
        </ul>
    </header>

    <div class="menu-bar">
        <div class="image-container">
            <a href="@Url.Action("AddUser", "User")">
                <img src="../Adduser.jpeg" alt="Add User" class="clickable-image">
            </a>
            <button class="nav-button">Add User</button>
        </div>
        <div class="image-container">
            <a href="@Url.Action("Datacollection", "Datacollection")">
                <img src="../Datacollection.jpeg" alt="Data Collection" class="clickable-image">
            </a>
            <button class="nav-button">Data Collection</button>
        </div>
        <div class="image-container">
            <a href="@Url.Action("Revenue", "Revenue")">
                <img src="../Revenue.jpeg" alt="Sales Collection" class="clickable-image">
            </a>
            <button class="nav-button">Sales Collection</button>
        </div>
        <div class="image-container">
            <a href="@Url.Action("Landfill", "Landfill")">
                <img src="../Landfill.jpeg" alt="Land Fill" class="clickable-image">
            </a>
            <button class="nav-button">Land Fill</button>
        </div>
    </div>
    <footer>
        <blockquote>"The greatest threat to our planet is the belief that someone else will save it." – Robert Swan</blockquote>
        
    </footer>
</body>
</html>